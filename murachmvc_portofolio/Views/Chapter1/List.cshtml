@using murachmvc_portofolio.Models.Chapter1
@model List<Module>
@{
    ViewData["Title"] = "Product List";
}
<h1>Module List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rarity</th>
            <th>Socket</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var module in @Model)
        {
            <tr>
                <td>@module.Name</td>
                <td>@module.Rarity</td>
                <td>@module.Socket</td>
                <td>
                    <a asp-controller="Chapter1" asp-action="Details"
                       asp-route-id="@module.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Chapter1"
   class="btn btn-primary">Chapter1 List</a>
